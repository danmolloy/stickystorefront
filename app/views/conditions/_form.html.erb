<% if mode == :new %>
  <% url = prize_conditions_path(@prize) %>
  <% method = :post %>
<% elsif mode == :edit %>
  <% url = prize_condition_path(@prize, @condition) %>
  <% method = :patch %>
<% end %>

<div class='form-wrapper'>
  <%= form_with scope: :condition, url: url, method: method do |form| %>
    <div class='form-item'>
      <%= label_tag :specific_numbers, 'Specific Numbers:' %>
      <%= form.text_field :specific_numbers %>
    </div>
    <div class='form-item'>
      <%= label_tag :multiple_of, 'Multiples Of:' %>
      <%= form.number_field :multiple_of, min: 0, step: 1 %>
    </div>
    <div class='form-item'>
      <%= label_tag :after, 'After:' %>
      <%= form.number_field :after, min: 0, step: 1 %>
    </div>
    <div class='form-item'>
      <%= label_tag :before, 'Before:' %>
      <%= form.number_field :before, min: 0, step: 1 %>
    </div>
    <div class='form-item'>
      <%= form.submit %>
    </div>
  <% end %>
</div>
