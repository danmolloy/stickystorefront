<div class='form-wrapper'>
  <%= form_with model: @prize do |form| %>
    <div class='form-item'>
      <%= label_tag :name, 'Name:', class:'form-label'%>
      <%= form.text_field :name, class: 'text-input' %>
    </div>
    <div class='form-item'>
      <%= label_tag :stock, 'Stock:', class:'form-label' %>
      <%= form.number_field :stock, min: 0, step: 1, class: 'text-input' %>
    </div>
    <div class='form-item'>
      <%= form.submit class: 'button', id:'submit'%>
    </div>
  <% end %>
</div>
