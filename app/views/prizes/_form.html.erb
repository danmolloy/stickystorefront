<div class='form-wrapper'>
  <%= form_with model: @prize do |form| %>
    <div class='form-item'>
      <%= label_tag :name, 'Name:' %>
      <%= form.text_field :name %>
    </div>
    <div class='form-item'>
      <%= label_tag :stock, 'Stock:' %>
      <%= form.number_field :stock, min: 0, step: 1 %>
    </div>
    <div class='form-item'>
      <%= form.submit %>
    </div>
  <% end %>
</div>
